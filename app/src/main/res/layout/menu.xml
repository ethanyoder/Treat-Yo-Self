        <TextView
            android:id="@+id/distanceHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:text="Distance:" />

        <RadioGroup
            android:id="@+id/distanceGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/distanceHeading"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp">

            <RadioButton
                android:id="@+id/shortDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_weight="1"
                android:text="less than 5 miles" />

            <RadioButton
                android:id="@+id/mediumDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_weight="1"
                android:checked="true"
                android:text="less than 15 miles" />

            <RadioButton
                android:id="@+id/longDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_weight="1"
                android:text="less than 30 miles" />
        </RadioGroup>

        <Button
            android:id="@+id/getSelfDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/distanceGroup"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:onClick="getSelfDate"
            android:text="Find Self Date!" />

